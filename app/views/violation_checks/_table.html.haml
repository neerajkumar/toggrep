%table.ui.table.segment
  %thead
    %tr
      %th N
      %th Date
      %th Description
  %tbody
    - if violation_checks.any?
      - violation_checks.each_with_index do |vc, index|
        %tr
          %td= index + 1
          %td= l(vc.created_at)
          %td= vc.violation_rule.description
    - else
      %tfoot
        %tr
          %th{colspan: '3'}
            Nothing to show
